{
    "version": "1.12.6",
    "description": "Open-source mod manager from Nexus Mods",
    "homepage": "https://www.nexusmods.com/about/vortex",
    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://github.com/Nexus-Mods/Vortex/releases/download/v1.12.6/vortex-setup-1.12.6.exe",
            "hash": "sha512:8f0d861892048f9e572dc550af025c659ff152166d5f0e423e4ba4025d56bb505047830f7c90b56fcc5374c797dc7c0fd8e5c1fa70a99cebc25e31efbae6a545",
            "installer": {
                "script": [
                    "$args = @('/S')",
                    "Start-Process \"$dir\\$fname\" -ArgumentList $args -Wait -Verb RunAs | Out-Null",
                    "Remove-Item \"$dir\\$fname\""
                ]
            }
        }
    },
    "checkver": {
        "github": "https://github.com/Nexus-Mods/Vortex"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Nexus-Mods/Vortex/releases/download/v$version/vortex-setup-$version.exe"
            }
        },
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "sha512: $base64"
        }
    }
}
